<% if (title) { %>
    <h1><%= title %></h1>
    <% } else {
      res.redirect('/')
    } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
   <% errors.array().forEach(error => { %>
     <li><%= error.msg %></li>
  <%  }) %>
   </ul>
  <% } %>



<div class="formContainer">
    <form action="/inventory/add-inventory" method="post">
        <div>
        <label class="top">Make*<input type="text" name="inv_make" required id="inv_make" value="<%= locals.inv_make %>"></label>
        <label class="top">Model*<input type="text" name="inv_model" required id="inv_model" value="<%= locals.inv_model %>"></label>
        <label class="top">Year*<input type="number" name="inv_year" required id="inv_year" min="1886" value = "<%= locals.inv_year %>"></label>
        <label class="top">Description*<input type="textarea" name="inv_description" placeholder="Add description here" required value = "<%= locals.inv_description %>"
                id="inv_description">
        </label>
        <label class="top">Image*<input type="url" name="inv_image" id="inv_image" required value = "<%= locals.inv_image %>"></label>
        <label class="top">Thumbnail*<input type="url" id="inv_thumbnail" name="inv_thumbnail" required value = "<%= locals.inv_thumbnail %>"></label>
        <label class="top">Price*<input type="number" id="inv_price" name="inv_price" required min="0" step="0.01" value = "<%= locals.inv_price %>"></label>
        <label class="top">Miles*<input type="number" id="inv_miles" name="inv_miles" required min="0" step="1" value = "<%= locals.inv_miles %>"></label>
        <label class="top">Color*<input type="text" name="inv_color" required id="inv_color" value = "<%= locals.inv_color %>"></label>
        <!-- <label >Classification*<input type="number" name="classification_id" required id="classification_id" value = "<%= locals.classification_id %>"></label> -->
        <label class="top">Classification*<select id="classification_id" name="classification_id" required>
            <%= buildClassificationList %>
        </select></label>
        </div>
        <input type="submit" value="Submit" class="submitBtn">
    </form>
</div>


